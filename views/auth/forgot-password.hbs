<section class="bg__img">
    
    <div class="logo-container">
        <img src="/images/logo3dwith-800x374-1.webp" alt="Logo" class="logo-image">
    </div>

    <!-- Formulario de registro centrado -->
    <div class="login-form-container">
        
        <div class="alert-container">
            {{>alert}} <!-- Espacio para alertas dinámicas -->
        </div>

        <!-- Formulario de registro -->
        <form action="/forgot-password" method="post" class="form_main" autocomplete="off">
            <h2 class="login-title">RECUPERAR CONTRASEÑA</h2>
            <br>
            <div class="input-group">
                <input type="text" class="input-field" id="username" name="username" placeholder="Nombre de usuario"
                    required>
            </div>
            <div class="button-container">
                <button type="submit" class="login-button">Crear cuenta</button>
            </div>
            <br>            
            <div class="create-account">
                <p class="create-account">¿Ya tienes cuenta? <a href="/login">Iniciar sesión</a></p>
            </div>
        </form>
    </div>
</section>